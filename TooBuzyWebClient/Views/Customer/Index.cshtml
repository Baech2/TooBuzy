@model List<TooBuzyWebClient.TooBuzyServiceReference.Customer>

@{
    ViewBag.Title = "TooBuzy - Vores restauranter";
}

<h2 class="text-center">Udvalget af restauranter</h2>
<div class="row">
    @foreach (var item in Model.OrderBy(x => x.Name))
    {
    <div class="col-lg-4 col-md-4 col-sm-6 productBox">
        <div>
            <img class="img-thumbnail productImg" src="~/Content/pictures/standard picture.png" />
        </div>
        <div>
            <h3 class="text-center">@item.Name</h3>
            <i>@item.Type</i>
            <p class="pull-right"><a class="btn btn-info" href="@Url.Action("Details", "Customer", new { Id = item.Id })">More ></a></p>
        </div>
    </div>
    }

</div>

