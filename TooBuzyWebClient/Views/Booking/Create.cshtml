@model TooBuzyWebClient.TooBuzyServiceReference.Booking

@{
    ViewBag.Title = "Create";
    SelectList Tablelist = ViewBag.tables;
}

<h2>Opret Booking</h2>

@using (Html.BeginForm("Create", "Booking", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Booking</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ConsumerId, htmlAttributes: new { @class = "control-label col-md-2" })
